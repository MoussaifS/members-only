<h1> log in</h1>

<div>
<%= form_with url: '/users/show' , method: 'get' do |user| %>
<%=  user.label  "User name:" , :class=>"form-label" %>
<%=  user.text_field :name , :class=>'form-control' , :autocomplete => :off %> 
<br>
<br>
<%= user.label :password, "User Password:" , :class=>"form-label" %>
<%= user.password_field :password , :autocomplete => :off , :class=>'form-control' %>
<br>
<br>
    <%=user.submit  "login"  , :class=> "btn btn-primary" %>
<%end%>
</div> 